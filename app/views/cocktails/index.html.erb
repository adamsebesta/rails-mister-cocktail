<div class="navbar navbar-light bg-light fixed-top">
  <%= link_to "<i class='fas fa-cocktail'></i> +".html_safe, new_cocktail_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
