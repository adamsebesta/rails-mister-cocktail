<div class= "row justify-content-center">
  <% @cocktails.each do |cocktail|  %>
      <%= link_to cocktail_path(cocktail)  do %>
        <div class=" card-main text-center p-5 m-4 " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <h3><%=cocktail.name%></h3>
        </div>
      <% end %>
  <% end %>
</div>
