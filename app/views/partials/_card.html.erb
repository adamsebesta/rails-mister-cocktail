<div class= "row justify-content-center">
  <% @cocktails.each do |cocktail|  %>
      <%= link_to cocktail_path(cocktail)  do %>
        <div class=" card-main text-center p-5 m-4 " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2098&q=80)">
          <h3><%=cocktail.name%></h3>
        </div>
      <% end %>
  <% end %>
</div>
